{
  "name": "vscode-sql-formatter",
  "displayName": "SQL Formatter",
  "description": "Format sql files using the sql-formatter npm package",
  "version": "2.1.5",
  "publisher": "lea21st",
  "repository": {
    "type": "git",
    "url": "https://github.com/lea21st/vscode-sql-formatter.git"
  },
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "formatter",
    "sql",
    "format",
    "mariadb",
    "mysql",
    "postgresql",
    "db2",
    "plsql",
    "n1ql",
    "redshift",
    "spark",
    "tsql"
  ],
  "activationEvents": [
    "onLanguage:sql"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "SQL Formatter",
      "properties": {
        "sql-formatter.dialect": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "sql",
            "mariadb",
            "mysql",
            "postgresql",
            "db2",
            "plsql",
            "n1ql",
            "redshift",
            "spark",
            "tsql"
          ],
          "default": "sql",
          "description": "Which dialect to format with (sql: Standard SQL)"
        },
        "sql-formatter.uppercase": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Convert keywords to uppercase"
        },
        "sql-formatter.linesBetweenQueries": {
          "scope": "resource",
          "type": "number",
          "minimum": 1,
          "default": 2,
          "description": "Change number of linebreaks between queries"
        }
      }
    }
  },
  "main": "./src/index.js",
  "icon": "icon.jpeg",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,md,json,css,prettierrc,eslintrc}\""
  },
  "dependencies": {
    "sql-formatter": "^4.0.2"
  },
  "devDependencies": {
    "eslint": "^8.3.0",
    "eslint-config-adpyke-es6": "^1.4.13",
    "eslint-config-prettier": "^6.5.0",
    "glob": "^7.1.5",
    "prettier": "^1.18.2"
  }
}
